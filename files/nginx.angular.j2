[Unit]
Description=Angular Development Server
After=network.target

[Service]
Type=simple
User=vagrant
Group=vagrant
WorkingDirectory=/home/vagrant/frontend
Environment=NODE_ENV=development
Environment=HOME=/home/vagrant
ExecStart=/bin/bash -c 'export NVM_DIR="$HOME/.nvm" && source "$NVM_DIR/nvm.sh" && nvm use 20.19.1 && ng serve --host 0.0.0.0 --port 4200'
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target